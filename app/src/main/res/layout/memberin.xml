<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="20dp"
    >
        <TextView
            android:id="@+id/memberintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="136dp"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:text="회원가입"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/new_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="아이디 "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/checkid_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="10dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/input_newid"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/editline"
                    android:hint="아이디 입력"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/chk_reid"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="50dp"
                    android:text="중복확인"
                    android:background="@drawable/circle_btncolor"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="10dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/new_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="비밀번호"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/input_newpw"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/editline"
                android:hint="비밀번호 입력"
                android:inputType="textPassword"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chk_pw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="비밀번호 확인"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="@id/new_id"
                    app:layout_constraintTop_toBottomOf="@+id/new_pw" />

                <TextView
                    android:id="@+id/checkpw_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="10dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/input_chkpw"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/editline"
                    android:hint="비밀번호 입력"
                    android:inputType="textPassword"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/chkbtn"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/circle_btncolor"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:layout_marginStart="50dp"
                    android:text="확인"
                    android:textSize="10dp" />


            </LinearLayout>


            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="이름"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/input_username"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/editline"
                android:hint="사용자명 입력"
                android:textSize="20dp"

                />

            <TextView
                android:id="@+id/userphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="휴대폰번호"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/input_userphone"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/editline"
                android:hint="-없이 입력"
                android:inputType="phone"
                android:textSize="20dp" />

            <Button
            android:id="@+id/memberjoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_btncolor"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="회원가입"/>
        </LinearLayout>

    </ScrollView>

</LinearLayout>